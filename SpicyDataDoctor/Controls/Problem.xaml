<UserControl x:Class="SpicyDataDoctor.Controls.Problem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpicyDataDoctor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="700">
    <StackPanel Orientation="Horizontal">
        <Label Name="pName" Content="Problem Message" FontSize="14" Width="205" VerticalContentAlignment="Center"/>
        <Button Margin="5 0 0 0" Click="OnMoreInfo">
            <Label Content="More Info"/>
        </Button>
        <Label Margin="8 0 0 0" Content="Actions:" FontSize="14" VerticalContentAlignment="Center"/>
        <ComboBox Name="pFixes" Margin="5 0 0 0" Width="280"></ComboBox>
        <Button Margin="0 0 0 0" Click="OnRunFix">
            <Label Content="Run Action"/>
        </Button>
    </StackPanel>
</UserControl>
